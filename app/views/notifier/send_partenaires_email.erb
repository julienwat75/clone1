<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
    <body>

  <% @datelimite=@multi.datelimite %>
    


   <% jour=@multi.datex.strftime("%A") %>  

   <% mois=@multi.datex.strftime("%B")  %>


   <% jour2=@datelimite.strftime("%A") %>  

   <% mois2=@datelimite.strftime("%B")  %>



